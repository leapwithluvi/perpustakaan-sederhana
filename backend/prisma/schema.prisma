generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  nisn Int @unique
  nama_lengkap String
  kelas String
  role Role @default(USER)
  created_at DateTime @default(now()) 
  updated_at DateTime @updatedAt
}

enum Role {
  USER 
  ADMIN
}